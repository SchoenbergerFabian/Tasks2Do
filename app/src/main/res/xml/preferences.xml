<?xml version="1.0" encoding="utf-8"?><!--androidx.preference.-->
<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <ListPreference
        android:defaultValue="@string/system_val"
        android:entries="@array/theme_entries"
        android:entryValues="@array/theme_values"
        android:icon="@drawable/ic_theme"
        android:key="@string/theme_key"
        android:title="@string/theme" />
    <ListPreference
        android:defaultValue="@string/phone_val"
        android:entries="@array/location_entries"
        android:entryValues="@array/location_values"
        android:icon="@drawable/ic_save"
        android:key="@string/location_key"
        android:title="@string/location" />
</PreferenceScreen>
    <!--androidx.preference.-->