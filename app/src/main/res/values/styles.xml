<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.NoActionBar">
        <item name="android:windowBackground">@color/windowBackground</item>

        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <!--toolbars-->
        <item name="bottomAppBarStyle">@style/AppBar</item>
        <item name="actionBarTheme">@style/ActionBar</item>

        <!--dialogs-->
        <item name="android:dialogTheme">@style/Dialog</item>
        <item name="dialogTheme">@style/Dialog</item>
        <item name="android:alertDialogTheme">@style/Dialog</item>
        <item name="alertDialogTheme">@style/Dialog</item>
        <item name="bottomSheetDialogTheme">@style/BottomSheet</item>

        <!--textColor-->
        <item name="android:textColor">@color/text</item>
        <item name="android:textColorPrimary">@color/text</item>
        <item name="android:textColorSecondary">@color/text</item>
        <item name="android:textColorHint">@color/hint</item>
        <item name="hintTextColor">@color/hint</item>

        <!--icons-->
        <item name="colorControlNormal">@color/icon</item>

    </style>

    <style name="AppBar" parent="Widget.MaterialComponents.BottomAppBar">
        <item name="android:backgroundTint">@color/colorPrimary</item>
        <item name="colorControlNormal">@color/icon</item>
    </style>

    <style name="ActionBar" parent="Theme.AppCompat.DayNight">
        <item name="android:backgroundTint">@color/colorPrimary</item>
        <item name="colorControlNormal">@color/icon</item>
    </style>

    <style name="BottomSheet" parent="Theme.Design.BottomSheetDialog">
        <item name="android:colorBackground">@color/windowBackground</item>
        <item name="android:windowIsFloating">true</item>

        <item name="colorPrimary">@color/text</item>

        <item name="android:textColor">@color/text</item>
        <item name="android:textColorPrimary">@color/text</item>
        <item name="android:textColorSecondary">@color/text</item>
    </style>

    <style name="Dialog" parent="Theme.MaterialComponents.DayNight.Dialog">
        <item name="android:windowBackground">@color/windowBackground</item>
        <item name="windowNoTitle">true</item>

        <item name="colorAccent">@color/colorAccent</item>

        <item name="colorPrimary">@color/text</item>

        <item name="android:textColor">@color/text</item>
        <item name="android:textColorPrimary">@color/text</item>
        <item name="android:textColorSecondary">@color/text</item>
        <item name="android:textColorHint">@color/hint</item>
    </style>

    <style name="TimePicker" parent="@android:style/Widget.Material.TimePicker">
        <item name="android:headerBackground">@color/timePicker</item>
        <item name="android:numbersBackgroundColor">@color/timePicker</item>
        <item name="android:numbersTextColor">@color/text</item>
        <item name="android:numbersSelectorColor">@color/colorAccent</item>
    </style>

</resources>